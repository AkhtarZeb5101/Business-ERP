@model IEnumerable<DatabaseAccess.tblCategory>

@{
    ViewBag.Title = "Category";
}

<h2>All Categories</h2>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<div class="card">
    <div class="card card-flat">
        <div class="card-header">
            @Html.ActionLink("Add Category", "Create", null, new { @style = "float:left;", @class = "btn btn-primary" })
            <input type="text" id="search" name="search" class="form-control col-md-3" style="float:right;" placeholder="search here" />
        </div>
        <div class="card-body">
            <!-- START table-responsive-->
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTable">
                    <thead>
                        <tr>
                            <th>
                                Category
                            </th>
                            <th>
                                User
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="allcategories">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.categoryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblUser.FullName)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.CategoryID }, new { @class = "btn btn-primary" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#search").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#allcategories tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
