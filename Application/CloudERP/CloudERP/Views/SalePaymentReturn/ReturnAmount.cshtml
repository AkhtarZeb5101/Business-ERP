@model IEnumerable<DatabaseAccess.tblCustomerReturnPayment>

@{
    double remaingbalance = (double)ViewBag.PreviousRemainingAmount;
    ViewBag.Title = "Return Sale Amount";
}

<script src="~/Scripts/jquery-3.3.1.js"></script>
<div class="card">
    <div class="card card-flat">
        <div class="card-header">
            <h4>Enter Return Payment's Details</h4>
            <h5 class="text-danger">@ViewBag.Message</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("ReturnAmount", "SalePaymentReturn", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="text" value="@ViewBag.InvoiceID" id="id" name="id" style="display:none;" />
                <div class="row">
                    <div class="col-md-4">
                        <label>Return Remaining Amount</label>
                        <input type="text" id="previousremainingamount" name="previousremainingamount" value="@remaingbalance" readonly="readonly" class="form-control" required />
                    </div>

                    <div class="col-md-4">
                        <label>Payment Amount</label>
                        <input min="0" type="number" id="paymentamount" name="paymentamount" class="form-control" required />
                    </div>
                    <div class="col-md-4">
                        <label>Current Remaining Amount</label>
                        <input type="text" id="remainingamount" name="remainingamount" readonly="readonly" class="form-control" />
                    </div>
                </div>

                <br />
                <hr />
                @Html.ActionLink("Back to List", "AllReturnSalesPendingAmount", "SalePaymentReturn", null, new { @class = "btn btn-primary" })
                <input type="submit" value="Submit Payment" class="btn btn-success" style="float:right;" />
            }
        </div>
    </div>
</div>


<div class="card">
    <div class="card card-flat">
        <div class="card-header">
            <h5 style="float:left;">@Session["SaleMessage"]</h5>
            <input type="text" id="search" name="search" class="form-control col-md-3" style="float:right;" placeholder="search here" />
        </div>
        <div class="card-body">
            <!-- START table-responsive-->
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTable">
                    <thead>

                        <tr>
                            <th>
                                Customer
                            </th>
                            <th>
                                Invoice No
                            </th>
                            <th>
                                Invoice Date
                            </th>
                            <th>
                                Return(Purchase Total Amount)
                            </th>
                            <th>
                                Return(Payment Amount)
                            </th>
                            <th>
                                Return(Remaining Balance)
                            </th>
                            <th>
                                User
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="allyears">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblCustomer.Customername)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InvoiceNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InvoiceDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PaidAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RemainingBalance)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblUser.FullName)
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#search").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#allyears tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });

        $("#previousremainingamount").val(@remaingbalance)

        $("#paymentamount").keyup(function () {
            var previousremainingamount = $("#previousremainingamount").val();
            var payment = this.value;
            $("#remainingamount").val((previousremainingamount - payment));
        });





    });



</script>