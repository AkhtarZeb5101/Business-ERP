@model IEnumerable<DatabaseAccess.Models.CustomerReturnInvoiceModel>

@{
    ViewBag.Title = "Return Sales Amount Pending";
}


<script src="~/Scripts/jquery-3.3.1.js"></script>
<div class="card">
    <div class="card card-flat">
        <div class="card-header">
            <h5 style="float:left;">@Session["SaleMessage"]</h5>
            <input type="text" id="search" name="search" class="form-control col-md-3" style="float:right;" placeholder="search here" />
        </div>
        <div class="card-body">
            <!-- START table-responsive-->
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTable">
                    <thead>
                        <tr>

                            <th>
                                Customer
                            </th>

                            <th>
                                Invoice No
                            </th>
                            <th>
                                Invoice Date
                            </th>

                            <th>
                                Return (Total Amount)
                            </th>
                            <th>
                                Return (Payment Amount)
                            </th>
                            <th>
                                Remaining Balance
                            </th>

                        </tr>
                    </thead>
                    <tbody id="allyears">
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.ActionLink(item.CustomerName, "CustomerDetails", "tblCustomers", new { id = item.CustomerID }, null)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.InvoiceNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InvoiceDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReturnTotalAmount)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.ReturnPaymentAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RemainingBalance)
                                </td>
                                <td>

                                    @{
                                        if (item.ReturnTotalAmount - 1 > item.ReturnPaymentAmount)
                                        {
                                            @Html.ActionLink("Return Payment", "ReturnAmount", new { id = item.CustomerReturnInvoiceID }, new { @class = "btn btn-primary" })
                                        }


                                    }

                                </td>


                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#search").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#allyears tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>