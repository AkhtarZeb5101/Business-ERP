@model IEnumerable<DatabaseAccess.tblCustomer>

@{
    ViewBag.Title = "Branch Customer's";
}

<script src="~/Scripts/jquery-3.3.1.js"></script>
<div class="card">
    <div class="card card-flat">
        <div class="card-header">
            <input type="text" id="search" name="search" class="form-control col-md-3" style="float:right;" placeholder="search here" />
        </div>
        <div class="card-body">
            <!-- START table-responsive-->
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTable">
                    <thead>
                        <tr>
                            <th>
                                Company
                            </th>
                            <th>
                                Branch
                            </th>
                            <th>
                                Customer
                            </th>
                            <th>
                                Contact No
                            </th>
                            <th>
                                Area
                            </th>
                            <th>
                                Address
                            </th>
                            <th>
                                User
                            </th>
                            <th>
                                Action's
                            </th>
                        </tr>
                    </thead>
                    <tbody id="allcusotmer">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblCompany.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblBranch.BranchName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Customername)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerContact)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerArea)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerAddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblUser.FullName)
                                </td>
                                <td>
                                    @Html.ActionLink("Update", "Edit", new { id = item.CustomerID }, new { @class = "btn btn-primary" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#search").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#allcusotmer tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
