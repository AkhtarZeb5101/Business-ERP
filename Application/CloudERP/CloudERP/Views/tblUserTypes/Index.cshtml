@model IEnumerable<DatabaseAccess.tblUserType>

@{
    ViewBag.Title = "User Types";
}


<script src="~/Scripts/jquery-3.3.1.js"></script>
 
<div class="card">
    <div class="card card-flat">
        <div class="card-header">
            @Html.ActionLink("Add User Type", "Create", null, new { @style = "float:left;", @class = "btn btn-primary" })
            <input type="text" id="searchusertype" name="searchusertype" class="form-control col-md-3" style="float:right;" placeholder="search here" />
        </div>
        <div class="card-body">
            <!-- START table-responsive-->
            <div class="table-responsive table table-striped table-bordered table-hover">
                <table class="table" id="datatable">
                    <thead>
                        <tr>
                            <th>
                               User type
                            </th>
                            <th>Action's</th>
                        </tr>
                    </thead>
                    <tbody id="usertypelist">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserType)
                                </td>
                                <td>
                                    @Html.ActionLink(" Edit ", "Edit", new { id = item.UserTypeID }, new { @class = "btn btn-pill-left btn-inverse btn-primary fa fa-edit" }) |
                                    @Html.ActionLink(" Details ", "Details", new { id = item.UserTypeID }, new { @class = "btn btn-pill-right btn-primary fa fa-exclamation" })

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#searchusertype").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#usertypelist tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>