@model IEnumerable<DatabaseAccess.tblUser>

@{
    ViewBag.Title = "All Users";
}

<script src="~/Scripts/jquery-3.3.1.js"></script>

<div class="card">
    <div class="card card-flat">
        <div class="card-header">
            <div class="row">
                <h4 class="col-md-8" style="float:left">All Users</h4>
                <input type="text" id="searchuser" name="searchuser" class="form-control col-md-3" style="float:right;" placeholder="search here" />
            </div>
        </div>
        <div class="card-body">
            <!-- START table-responsive-->
            <div class="table-responsive table table-striped table-bordered table-hover">
                <table class="table" id="datatable">
                    <thead>
                        <tr>
                            <th>
                                Full Name
                            </th>
                            <th>
                                Email Address
                            </th>
                            <th>
                                Contact No
                            </th>
                            <th>
                                User Name
                            </th>

                            <th>
                                Status
                            </th>
                            <th>
                                User Type
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="listusers">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblUserType.UserType)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.UserID }, new { @class = "btn btn-primary" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#searchuser").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#listusers tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>