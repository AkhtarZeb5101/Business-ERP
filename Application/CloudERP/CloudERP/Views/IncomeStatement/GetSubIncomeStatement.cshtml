@model DatabaseAccess.Models.IncomeStatementModel
@{

    ViewBag.Title = "Sub Branch Income Statement";
}

<script src="~/Scripts/jquery-3.3.1.js"></script>
@using (Html.BeginForm("GetSubIncomeStatement", "IncomeStatement", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card card-flat">


            <div class="card-body">

                <div class="row">
                    <div class="col-md-4">
                        <label>Select Financial Year</label>
                        <select class="form-control" id="id" name="id" required />
                        <input type="submit" value="Retrive Income Statment" class="btn btn-success form-control" />
                    </div>
                    <div class="col-md-4">

                    </div>
                </div>

            </div>

        </div>
    </div>
}


@{
    <div class="card">
        <div class="card card-flat">
            <div class="card-header">
                <h3 class="text-primary">Income Statement</h3>
            </div>
            <div class="card-body">
                <!-- START table-responsive-->
                <div class="table-responsive">
                    <table class="table table-hover">
                        <tr>
                            <th>Account Title</th>
                            <th>Amount</th>
                            <th>Total</th>
                        </tr>
                        @foreach (var accounthead in Model.incomeStatementHeads)
                        {
                            <tr style="background-color:lightgray;">
                                <td>
                                    @accounthead.Title
                                </td>
                                <td></td>
                                <td></td>
                            </tr>
                            foreach (var accounts in accounthead.AccountHead.AccountHeadDetails)
                            {
                                <tr>
                                    <td>
                                        @accounts.AccountSubTitle
                                    </td>
                                    @if (accounts.Status == "Debit")
                                    {

                                        if (accounts.AccountSubTitle.Contains("Revenue"))
                                        {
                                            <td>
                                                (@accounts.TotalAmount)
                                            </td>
                                        }
                                        else if (accounts.AccountSubTitle.Contains("Expenses"))
                                        {
                                            <td>
                                                @accounts.TotalAmount
                                            </td>
                                        }

                                    }
                                    else
                                    {
                                        if (accounts.AccountSubTitle.Contains("Revenue"))
                                        {
                                            <td>
                                                @accounts.TotalAmount
                                            </td>
                                        }
                                        else if (accounts.AccountSubTitle.Contains("Expenses"))
                                        {
                                            <td>
                                                (@accounts.TotalAmount)
                                            </td>
                                        }

                                    }
                                    <td></td>
                                </tr>
                            }

                            if (accounthead.Title.Contains("Revenue"))
                            {
                                <tr style="background-color:black; color:white;">
                                    <td>
                                        Total Revenue :
                                    </td>
                                    <td></td>
                                    <td>

                                        @accounthead.TotalAmount

                                    </td>
                                </tr>
                            }
                            else if (accounthead.Title.Contains("Expenses"))
                            {
                                <tr style="background-color:black; color:white;">
                                    <td>
                                        Total Expenses :
                                    </td>
                                    <td></td>
                                    <td>

                                        @accounthead.TotalAmount

                                    </td>
                                </tr>
                            }

                            <tr><td></td><td></td><td></td></tr>
                        }

                        <tr style="background-color:black; color:white;">
                            <td>
                                Net Income
                            </td>
                            <td></td>
                            <td>
                                @Model.NetIncome
                            </td>
                        </tr>
                    </table>



                </div>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: "/TrialBalance/GetFinancialYear",
            data: {},
            dataType: 'Json',
            success: function (response) {

                $('#id').append("<option value='0'>Select Financial Year</option>");
                for (var i = 0; i < response.data.length; i++) {
                    $('#id').append("<option value=" + response.data[i].FinancialYearID + ">" + response.data[i].FinancialYear + "</option>");
                }

            }
        });

    });
</script>
