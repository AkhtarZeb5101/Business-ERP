@model IEnumerable<DatabaseAccess.tblAccountSetting>

@{
    ViewBag.Title = "Manage Transections";
}

<script src="~/Scripts/jquery-3.3.1.js"></script>
<div class="card">
    <div class="card card-flat">
        <div class="card-header">
            @Html.ActionLink("Set Accounting Flow", "Create", null, new { @style = "float:left;", @class = "btn btn-primary" })
            @ViewBag.Message
            <input type="text" id="search" name="search" class="form-control col-md-3" style="float:right;" placeholder="search here" />
        </div>
        <div class="card-body">
            <!-- START table-responsive-->
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTable">
                    <thead>
                        <tr>
                            <th>
                                Activity
                            </th>
                            <th>
                                Head Account
                            </th>
                            <th>
                                Control Account
                            </th>
                            <th>
                                Sub Contorl
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="defaultaccount">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblAccountActivity.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblAccountHead.AccountHeadName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblAccountControl.AccountControlName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblAccountSubControl.AccountSubControlName)
                                </td>
                                <td>
                                    @Html.ActionLink("Update", "Edit", new { id = item.AccountSettingID }, new { @class = "btn btn-primary" })
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#search").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#defaultaccount tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>