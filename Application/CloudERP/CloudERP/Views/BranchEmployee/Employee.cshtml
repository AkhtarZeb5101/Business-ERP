@model IEnumerable<DatabaseAccess.tblEmployee>

@{
    ViewBag.Title = "Employee";
}

<h2>Employee</h2>

<script src="~/Scripts/jquery-3.3.1.js"></script>
<div class="card">
    <div class="card card-flat">
        <div class="card-header">
            @Html.ActionLink("Add Employee", "EmployeeRegistration", "BranchEmployee", new { @style = "float:left;", @class = "btn btn-primary" })
            <input type="text" id="searchemployee" name="searchemployee" class="form-control col-md-3" style="float:right;" placeholder="search here" />
        </div>
        <div class="card-body">
            <!-- START table-responsive-->
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTable">
                    <thead>
                        <tr>
                            <th>
                                Branch
                            </th>
                            <th>
                                Full Name
                            </th>
                            <th>
                                Contact No
                            </th>
                            <th>
                                Photo
                            </th>
                            <th>
                                Designation
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="allemployee">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblBranch.BranchName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactNo)
                                </td>
                                <td>
                                    @{ if (!string.IsNullOrEmpty(item.Photo))
                                        {
                                            <img src="@Url.Content(item.Photo)" alt="Image" style="width:50px;height:50px;max-width: 100%; height: auto;" />
                                        }


                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Designation)
                                </td>
                                <td class="btn-group">
                                    @Html.ActionLink("Update", "EmployeeUpdation", new { id = item.EmployeeID }, new { @class = "btn btn-primary" })
                                    @Html.ActionLink("Profile", "ViewProfile", new { id = item.EmployeeID }, new { @class = "btn btn-info" })

                                    @{
                                        if (item.UserID == null)
                                        {
                                            @Html.ActionLink("Create User", "CreateUser", "UserSetting" ,new { employeeid = item.EmployeeID }, new { @class = "btn btn-success" })
                                        }
                                        else
                                        {
                                            @Html.ActionLink("Update User", "UpdateUser", "UserSetting", new { userid = item.UserID }, new { @class = "btn btn-success" })
                                        }

                                    }


                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#searchemployee").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#allemployee tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>