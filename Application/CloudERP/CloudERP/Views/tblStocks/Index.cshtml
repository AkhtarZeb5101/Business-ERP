@model IEnumerable<DatabaseAccess.tblStock>

@{
    ViewBag.Title = "Stock";
}

<h2>Stock Details</h2>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<div class="card">
    <div class="card card-flat">
        <div class="card-header">
            @Html.ActionLink("New Product", "Create", null, new { @style = "float:left;", @class = "btn btn-primary" })
            <input type="text" id="search" name="search" class="form-control col-md-3" style="float:right;" placeholder="search here" />
        </div>
        <div class="card-body">
            <!-- START table-responsive-->
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTable">
                    <thead>
                        <tr>
                            <th>
                                Category
                            </th>

                            <th>
                                Item's
                            </th>
                            <th>
                                Current Qty
                            </th>

                            <th>
                                Expiry Date
                            </th>
                            <th>
                                Manf Date
                            </th>

                            <th>
                                Status
                            </th>
                            <th>Action's</th>
                        </tr>
                       
                    </thead>
                    <tbody id="allproducts">
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblCategory.categoryName)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.ProductName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.ExpiryDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Manufacture)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td class="btn-group">
                                @Html.ActionLink("Update", "Edit", new { id = item.ProductID }, new { @class="btn btn-primary"})
                                @Html.ActionLink("Item Detail", "Details", new { id = item.ProductID }, new { @class = "btn btn-info" })
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#search").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#allproducts tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
