@model IEnumerable<DatabaseAccess.tblBranch>

@{
    ViewBag.Title = "Branch's";
}

<h2>All Branch</h2>

<script src="~/Scripts/jquery-3.3.1.js"></script>
<div class="card">
    <div class="card card-flat">
        <div class="card-header">
            @Html.ActionLink("Add Branch", "Create", null, new { @style = "float:left;", @class = "btn btn-primary" })
            <input type="text" id="searchbaranch" name="searchbaranch" class="form-control col-md-3" style="float:right;" placeholder="search here" />
        </div>
        <div class="card-body">
            <!-- START table-responsive-->
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTable">
                    <thead>
                        <tr>
                            <th>
                                Level
                            </th>
                            <th>
                                Branch Title
                            </th>
                            <th>
                                Contact No
                            </th>
                            <th>
                                Branch Address
                            </th>


                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="allbranches">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblBranchType.BranchType)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BranchName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BranchContact)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BranchAddress)
                                </td>
                                <td>
                                    <div class="mt-2 btn-group">
                                        @Html.ActionLink("Edit", "Edit", new { id = item.BranchID }, new { @class = "btn btn-primary" })

                                        @Html.ActionLink("Sales", "SubCustomSalesHistory", "SalePayment", new { FromDate = DateTime.Now, ToDate = DateTime.Now, id = item.BranchID }, new { @class = "btn btn-info" })
                                        @Html.ActionLink("Purchases", "SubCustomPurchasesHistory", "PurchasePayment", new { FromDate = DateTime.Now, ToDate = DateTime.Now, id = item.BranchID }, new { @class = "btn btn-info" })
                                    </div> <div class="mt-2 btn-group">
                                        @Html.ActionLink("Journal", "SubJournal", "GeneralTransactions", new { id = item.BranchID }, new { @class = "btn btn-info" })
                                        @Html.ActionLink("Accounts Ledger", "GetSubLedger", "Ledger", new { bchid = item.BranchID.ToString() }, new { @class = "btn btn-info" })
                                    </div> <div class="mt-2 btn-group">
                                        @Html.ActionLink("Balance Sheet", "SubBalanceSheet", "BalanceSheets", new { bnchid = item.BranchID.ToString() }, new { @class = "btn btn-info" })
                                        @Html.ActionLink("Income Statement", "GetSubIncomeStatement", "IncomeStatement", new { bnchid = item.BranchID.ToString() }, new { @class = "btn btn-info" })
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#searchbaranch").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#allbranches tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
