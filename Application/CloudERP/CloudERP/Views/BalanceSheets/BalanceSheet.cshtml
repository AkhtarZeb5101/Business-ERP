@model DatabaseAccess.Models.BalanceSheetModel
@{
    ViewBag.Title = "Balance Sheet";
}

<script src="~/Scripts/jquery-3.3.1.js"></script>
@using (Html.BeginForm("BalanceSheet", "BalanceSheets", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card card-flat">


            <div class="card-body">

                <div class="row">
                    <div class="col-md-4">
                        <label>Select Financial Year</label>
                        <select class="form-control" id="id" name="id" required />
                        <input type="submit" value="Retrive Balance Sheet" class="btn btn-success form-control" />
                    </div>
                    <div class="col-md-4">

                    </div>
                </div>

            </div>

        </div>
    </div>
}


@{
    <div class="card">
        <div class="card card-flat">
            <div class="card-header">
                <h3 class="text-primary">Balance Sheet</h3>
            </div>
            <div class="card-body">
                <!-- START table-responsive-->
                <div class="table-responsive">
                    <table class="table table-hover">
                        <tr>
                            <th>Account Title</th>
                            <th>Amount</th>
                            <th>Total</th>
                        </tr>
                        @foreach (var accounthead in Model.AccountHeadTotals)
                        {
                            <tr style="background-color:lightgray;">
                                <td>
                                    @accounthead.AccountHeadTitle
                                </td>
                                <td></td>
                                <td></td>
                            </tr>
                            foreach (var accounts in accounthead.AccountHeadDetails)
                            {
                                <tr>
                                    <td>
                                        @accounts.AccountSubTitle
                                    </td>
                                    @if (accounts.Status == "Debit")
                                    {

                                        if (accounts.AccountSubTitle.Contains("Assets"))
                                        {
                                            <td>
                                                @accounts.TotalAmount
                                            </td>
                                        }
                                        else if (accounts.AccountSubTitle.Contains("Liabilities") || accounts.AccountSubTitle.Contains("Capital"))
                                        {
                                            <td>
                                                (@accounts.TotalAmount)
                                            </td>
                                        }

                                    }
                                    else
                                    {
                                        if (accounts.AccountSubTitle.Contains("Assets"))
                                        {
                                            <td>
                                                (@accounts.TotalAmount)
                                            </td>
                                        }
                                        else if (accounts.AccountSubTitle.Contains("Liabilities") || accounts.AccountSubTitle.Contains("Capital"))
                                        {
                                            <td>
                                                @accounts.TotalAmount
                                            </td>
                                        }

                                    }
                                    <td></td>
                                </tr>
                            }

                            if (accounthead.AccountHeadTitle.Contains("Assets"))
                            {
                                <tr style="background-color:black; color:white;">
                                    <td>
                                        Total Assests :
                                    </td>
                                    <td></td>
                                    <td>

                                        @Model.TotalAssets

                                    </td>
                                </tr>
                            }
                            else if (accounthead.AccountHeadTitle.Contains("Liabilities"))
                            {
                                <tr style="background-color:lightcyan; color:black;">
                                    <td>
                                        Total Liabilities :
                                    </td>
                                    <td></td>
                                    <td>

                                        @accounthead.TotalAmount

                                    </td>
                                </tr>
                            }
                            if (accounthead.AccountHeadTitle.Contains("Capital"))
                            {
                                <tr style="background-color:lightcyan; color:black;">
                                    <td>
                                        Total Owner Equity :
                                    </td>
                                    <td></td>
                                    <td>

                                        @accounthead.TotalAmount

                                    </td>
                                </tr>
                            }
                            <tr><td></td><td></td><td></td></tr>
                        }
                        <tr style="background-color:lightcyan; color:black;">
                            <td>
                                Total Return Earning
                            </td>
                            <td></td>
                            <td>
                                @Model.ReturnEarning
                            </td>
                        </tr>

                        <tr style="background-color:black; color:white;">
                            <td>
                                Total Balance(Liabilities + Owner Equity + Return Earning)
                            </td>
                            <td></td>
                            <td>
                                @Model.Total_Liabilites_OwnerEquity_ReturnEarning
                            </td>
                        </tr>
                    </table>



                </div>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: "/TrialBalance/GetFinancialYear",
            data: {},
            dataType: 'Json',
            success: function (response) {

                $('#id').append("<option value='0'>Select Financial Year</option>");
                for (var i = 0; i < response.data.length; i++) {
                    $('#id').append("<option value=" + response.data[i].FinancialYearID + ">" + response.data[i].FinancialYear + "</option>");
                }

            }
        });

    });
</script>
