@model IEnumerable<DatabaseAccess.Models.SalePaymentModel>

@{
    double remaingbalance = 0;
    ViewBag.Title = "Sale Payment Details";
}

<script src="~/Scripts/jquery-3.3.1.js"></script>
<div class="card">
    <div class="card card-flat">
        <div class="card-header">
            <input type="text" id="search" name="search" class="form-control col-md-3" style="float:right;" placeholder="search here" />
        </div>
        <div class="card-body">
            <!-- START table-responsive-->
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTable">
                    <thead>
                        <tr>

                            <th>
                                Customer
                            </th>
                            <th>
                                Contact No
                            </th>
                            <th>
                                Invoice No
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Total Amount
                            </th>
                            <th>
                                Paid Amount
                            </th>
                            <th>
                                Remaining Balance
                            </th>

                        </tr>
                    </thead>
                    <tbody id="allyears">
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerContactNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InvoiceNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InvoiceDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PaymentAmount)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RemainingBalance)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

@{

    double TotalReturnRemainingBalance = 0;
    int noofinvoice = 0;
    if (ViewData["ReturnSaleDetails"] != null)
    {
        <h3>Sale Return Details</h3>
        var ReturnSaleDetail = ViewData["ReturnSaleDetails"] as List<DatabaseAccess.tblCustomerReturnInvoice>;
        foreach (DatabaseAccess.tblCustomerReturnInvoice item in ReturnSaleDetail)
        {
            noofinvoice = noofinvoice + 1;
            double invoiceremainingbalance = 0;
            double payamount = item.tblCustomerReturnPayments.Sum(s => s.PaidAmount);
            invoiceremainingbalance = item.TotalAmount - payamount;
            TotalReturnRemainingBalance = TotalReturnRemainingBalance + invoiceremainingbalance;
            <div class="row todo">
                <div class="col-lg-12 todo-item-list">
                    <div id="accordion" role="tablist" aria-multiselectable="true">

                        <div class="card mb-0 todo-item">
                            <div class="card-header">
                                <p class="text-bold mb-0">
                                    <div class="clickable collapsed" data-toggle="collapse" data-parent="#accordion" data-target="#collapseTwo_@noofinvoice">

                                        <div class="row">
                                            <div class="col-md-1">
                                                <div>

                                                    Customer
                                                    <div>
                                                        @item.tblCustomer.Customername
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div>
                                                    Invoice Date
                                                    <div>
                                                        @item.InvoiceDate
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div>
                                                    Invoice No :
                                                    <div>
                                                        @item.InvoiceNo
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div>
                                                    Return Total :
                                                    <div>@item.TotalAmount</div>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div>
                                                    Return Payment :
                                                    <div>@payamount</div>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div>
                                                    Remaining Return :
                                                    <div>
                                                        @invoiceremainingbalance
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </p>
                            </div>
                            <div class="collapse" id="collapseTwo_@noofinvoice">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        @if (payamount > 0)
                                        {

                                            <table class="table table-hover" id="dataTable">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            Invoice No
                                                        </th>
                                                        <th>
                                                            Payment Date
                                                        </th>
                                                        <th>
                                                            Total Amount
                                                        </th>
                                                        <th>
                                                            Payment Amount
                                                        </th>
                                                        <th>
                                                            Remaining Balance
                                                        </th>

                                                    </tr>
                                                </thead>
                                                <tbody id="allyears">
                                                    @foreach (var payementDetails in item.tblCustomerReturnPayments)
                                                    {
                                                        <tr>

                                                            <td>
                                                                @payementDetails.InvoiceNo
                                                            </td>
                                                            <td>
                                                                @payementDetails.InvoiceDate
                                                            </td>
                                                            <td>
                                                                @payementDetails.TotalAmount
                                                            </td>
                                                            <td>
                                                                @payementDetails.PaidAmount
                                                            </td>
                                                            <td>
                                                                @payementDetails.RemainingBalance
                                                            </td>


                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        }
                                        else
                                        {
                                            <div class="text-center">
                                                No Payment Record
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <br />
        }
    }
    remaingbalance = ((double)ViewBag.PreviousRemainingAmount - TotalReturnRemainingBalance);
}
<div class="row">
    <div class="col-lg-6"></div>
    <div class="col-lg-6 py-2">

        <div class="row mb-3 align-items-center">
            <div class="col-7">
                <div class="h3">Remaining Total Balance :</div>
            </div>
            <div class="col-5">
                <div id="previousremainingamounts" class="text-left h3">@(remaingbalance.ToString("F2"))</div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $("#search").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#allyears tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
