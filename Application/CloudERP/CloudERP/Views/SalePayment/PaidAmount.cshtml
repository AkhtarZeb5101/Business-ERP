@model IEnumerable<DatabaseAccess.Models.SalePaymentModel>

@{
    ViewBag.Title = "Sale Paid Amount";
}
<script src="~/Scripts/jquery-3.3.1.js"></script>
<div class="card">
    <div class="card card-flat">
        <div class="card-header">
            <h4>Enter Payment's Details</h4>
            <h5 class="text-danger">@ViewBag.Message</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("PaidAmount", "SalePayment", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="text" value="@ViewBag.InvoiceID" id="id" name="id" style="display:none;" />
                <div class="row">
                    <div class="col-md-4">
                        <label>Sale Remaining Amount</label>
                        <input type="text" id="previousremainingamount" name="previousremainingamount" value="@ViewBag.PreviousRemainingAmount" readonly="readonly" class="form-control" required />
                    </div>

                    <div class="col-md-4">
                        <label>Enter Paid Amount</label>
                        <input type="text" id="paidamount" name="paidamount" class="form-control" required />
                    </div>
                    <div class="col-md-4">
                        <label>Current Remaining Amount</label>
                        <input type="text" id="remainingamount" name="remainingamount" readonly="readonly" class="form-control" />
                    </div>
                </div>

                <br />
                <hr />
                <input type="submit" value="Paid Amount" class="btn btn-success" style="float:right;" />
            }
        </div>
    </div>
</div>

<div class="card">
    <div class="card card-flat">
        <div class="card-header">

            <h4 style="float:left;">Sale Invoice Paid Details</h4>
            <input type="text" id="search" name="search" class="form-control col-md-3" style="float:right;" placeholder="search here" />

        </div>
        <div class="card-body">
            <!-- START table-responsive-->
            <div class="table-responsive">
                <table class="table table-hover" id="dataTable">
                    <thead>
                        <tr>

                            <th>
                                Customer
                            </th>
                            <th>
                                Contact No
                            </th>
                            <th>
                                Invoice No
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Total Amount
                            </th>
                            <th>
                                Paid Amount
                            </th>
                            <th>
                                Remaining Balance
                            </th>

                        </tr>
                    </thead>
                    <tbody id="allyears">
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerContactNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InvoiceNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InvoiceDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PaymentAmount)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RemainingBalance)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#search").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#allyears tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });

        $("#paidamount").keyup(function () {
            var previousremainingamount = $("#previousremainingamount").val();
            var payment = this.value;
            $("#remainingamount").val((previousremainingamount - payment));
        });





    });



</script>
