@model IEnumerable<DatabaseAccess.Models.SalePaymentModel>

@{
    ViewBag.Title = "Custom Base Sale's History";
}

<div class="card">
    <div class="card card-flat">
        <div class="card-header">
            <h4>Select Range(From Date and To Date)</h4>
            <h5 class="text-danger">@ViewBag.Message</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("CustomSalesHistory", "SalePayment", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="text" value="@ViewBag.InvoiceID" id="id" name="id" style="display:none;" />
                <div class="row">
                    <div class="col-md-4">
                        <label>Select From Date</label>
                        <input type="date" id="FromDate" name="FromDate" value="@DateTime.Now" class="form-control" required />
                    </div>

                    <div class="col-md-4">
                        <label>Select To Date</label>
                        <input type="date" id="ToDate" name="ToDate" value="@DateTime.Now" class="form-control" required />
                    </div>
                </div>

                <br />
                <hr />
                <input type="submit" value="Retrive Record" class="btn btn-success" style="float:right;" />
            }
        </div>
    </div>
</div>




<script src="~/Scripts/jquery-3.3.1.js"></script>
<div class="card">
    <div class="card card-flat">
        <div class="card-header">
            <h5 style="float:left;">@Session["Message"]</h5>
            <input type="text" id="search" name="search" class="form-control col-md-3" style="float:right;" placeholder="search here" />
        </div>
        <div class="card-body">
            <!-- START table-responsive-->
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTable">
                    <thead>
                        <tr>

                            <th>
                                Customer
                            </th>
                            <th>
                                Contact No
                            </th>
                            <th>
                                Invoice No
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                               Sale Total Amount
                            </th>
                            <th>
                                Return Products(Total Amount)
                            </th>
                            <th>
                                After Return( Sale Total Amount)
                            </th>
                            <th>
                                Paid Amount
                            </th>
                            <th>
                                Payment To (Customer)
                            </th>
                            <th>
                                Remaining Balance
                            </th>

                        </tr>
                    </thead>
                    <tbody id="allyears">
                        @foreach (var item in Model)
                        {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerContactNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InvoiceNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InvoiceDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReturnProductAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AfterReturnTotalAmount)
                            </td>
                            <td>
                                @{
                                    if (item.PaymentAmount == 0)
                                    {

                                        @Html.ActionLink("Set Paid", "PaidAmount", new { id = item.CustomerInvoiceID }, new { @class = "text-success" })

                                    }
                                    else
                                    {
                                        @Html.DisplayFor(modelItem => item.PaymentAmount)
                                    }
                                }


                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReturnPaymentAmount)
                            </td>
                            <td>
                                @{
                                    if (item.RemainingBalance == 0 && item.PaymentAmount != 0)
                                    {
                                        <em class="icon-check">
                                            <Label class="text-success">Clear</Label>
                                        </em>
                                    }
                                    else if (item.RemainingBalance < 0)
                                    {
                                        @Html.ActionLink(item.RemainingBalance.ToString("F2"), "ReturnSalePendingAmount", "SalePaymentReturn", new { id = item.CustomerInvoiceID }, new { @class = "btn btn-outline-danger btn-lg" })
                                    }

                                    else
                                    {
                                        <label> @(item.TotalAmount - item.PaymentAmount)</label>

                                    }
                                }

                            </td>

                            <td>

                                @{
                                    if (item.RemainingBalance < item.TotalAmount && item.PaymentAmount != 0)
                                    {
                                        @Html.ActionLink("Pay History", "PaidHistory", new { id = item.CustomerInvoiceID }, new { @class = "mt-2 btn btn-primary" })
                                    }
                                    else
                                    {
                                        <em class="icon-book-open">
                                            <Label class="text-danger"><b>No History</b></Label>
                                        </em>
                                    }
                                    @Html.ActionLink("View Details", "SaleItemDetail", new { id = item.CustomerInvoiceID }, new { @class = "mt-2 btn btn-info" })

                                }

                                @Html.ActionLink("Print Invoice", "PrintSaleInvoice","SalePayment", new { id = item.CustomerInvoiceID }, new { @class = "mt-2 btn btn-primary" })

                            </td>


                        </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#search").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#allyears tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>