
@model IEnumerable<DatabaseAccess.Models.SalePaymentModel>

@{
    ViewBag.Title = "Sale's Payment Pending List";
}
<script src="~/Scripts/jquery-3.3.1.js"></script>
<div class="card">
    <div class="card card-flat">
        <div class="card-header">
            <h5 style="float:left;">@Session["Message"]</h5>
            <input type="text" id="search" name="search" class="form-control col-md-3" style="float:right;" placeholder="search here" />
        </div>
        <div class="card-body">
            <!-- START table-responsive-->
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTable">
                    <thead>
                        <tr>

                            <th>
                                Customer
                            </th>
                            <th>
                                Contact No
                            </th>
                            <th>
                                Invoice No
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Total Amount
                            </th>
                            <th>
                                Paid Amount
                            </th>
                            <th>
                                Remaining Balance
                            </th>

                        </tr>
                    </thead>
                    <tbody id="allyears">
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerContactNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InvoiceNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InvoiceDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PaymentAmount)

                                </td>
                                <td>
                                    <label> @(item.TotalAmount - item.PaymentAmount)</label>
                                </td>

                                <td class="btn-group">

                                    @{
                                        if (item.TotalAmount - 1 > item.PaymentAmount)
                                        {
                                            @Html.ActionLink("Pay Amount", "PaidAmount", new { id = item.CustomerInvoiceID }, new { @class = "btn btn-primary" })
                                        }

                                        if (item.PaymentAmount > 0)
                                        {
                                            @Html.ActionLink("Pay History", "PaidHistory", new { id = item.CustomerInvoiceID }, new { @class = "btn btn-info" })
                                        }
                                    }

                                </td>


                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#search").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#allyears tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>


