@model IEnumerable<DatabaseAccess.tblCustomerInvoiceDetail>

@{
    ViewBag.Title = "Sale Details";
}

@{
    double total = 0;
    <div class="card">
        <div class="card card-flat">
            <div class="card-header">
                <h3 class="text-success"> Sale Products Detail</h3>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <tr>
                        <th>
                            Product
                        </th>
                        <th>
                            Qty
                        </th>
                        <th>
                            Unit Price
                        </th>
                        <th>
                            Item Cost
                        </th>

                    </tr>

                    @foreach (var item in Model)
                    {
                        ViewBag.Title = "Sale Invoice No : " + item.tblCustomerInvoice.InvoiceNo;
                        int qty = 0;
                        double itemcost = 0;
                        qty = item.SaleQuantity - item.tblCustomerReturnInvoiceDetails.Where(q => q.ProductID == item.ProductID).Sum(q => q.SaleReturnQuantity);
                        itemcost = qty * item.SaleUnitPrice;
                        total = total + itemcost;

                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.tblStock.ProductName)
                            </td>
                            <td>
                                @qty
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SaleUnitPrice)
                            </td>

                            <td class="text-left">
                                @itemcost
                            </td>

                        </tr>
                    }

                </table>
            </div>
            <div class="row">
                <div class="col-lg-6"></div>
                <div class="col-lg-6 py-2">
                    <div class="row mb-3 align-items-center">
                        <div class="col-7">
                            <div class="h3">GRAND TOTAL</div>
                        </div>
                        <div class="col-5">
                            <div class="text-left h3">@total.ToString("F2")</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    foreach (var item in Model)
    {
        if (item.tblCustomerReturnInvoiceDetails.Where(s => s.CustomerInvoiceID == item.CustomerInvoiceID).FirstOrDefault() != null)
        {
            double returntotal = 0;
            <div class="card">
                <div class="card card-flat">
                    <div class="card-header">
                        <h3 class="text-danger"> Return Sale Products Detail</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover">
                            <tr>
                                <th>
                                    Return Product
                                </th>
                                <th>
                                    Return Qty
                                </th>
                                <th>
                                    Unit Price
                                </th>
                                <th>
                                    Item Cost
                                </th>

                            </tr>

                            @foreach (var itemproduct in item.tblCustomerReturnInvoiceDetails)
                            {

                                int qty = 0;
                                double itemcost = 0;
                                qty = itemproduct.SaleReturnQuantity;
                                itemcost = qty * itemproduct.SaleReturnUnitPrice;
                                returntotal = returntotal + itemcost;

                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => itemproduct.tblStock.ProductName)
                                    </td>
                                    <td>
                                        @qty
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => itemproduct.SaleReturnUnitPrice)
                                    </td>

                                    <td class="text-left">
                                        @itemcost
                                    </td>

                                </tr>
                            }

                        </table>
                    </div>
                    <div class="row">
                        <div class="col-lg-6"></div>
                        <div class="col-lg-6 py-2">
                            <div class="row mb-3 align-items-center">
                                <div class="col-7">
                                    <div class="h3">Return TOTAL</div>
                                </div>
                                <div class="col-5">
                                    <div class="text-left h3">@returntotal.ToString("F2")</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }



}
