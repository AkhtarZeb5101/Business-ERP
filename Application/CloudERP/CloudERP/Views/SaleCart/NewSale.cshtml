@model IEnumerable<DatabaseAccess.tblSaleCartDetail>

@{
    ViewBag.Title = "Sale";
}

<script src="~/Scripts/jquery-3.3.1.js"></script>
@using (Html.BeginForm("AddItem", "SaleCart", FormMethod.Post, null))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Sale Details</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label class="control-label col-md-2">Select Product</label>
        <div class="col-md-6">
            <select class="form-control" id="PID" name="PID" required></select>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Quantity</label>
        <div class="col-md-6">
            <input type="number" class="form-control" id="Qty" name="Qty" placeholder="Enter Purchase Quantity..." required />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Unit Price</label>
        <div class="col-md-6">
            <input type="number" class="form-control" id="Price" step=".01" name="Price" placeholder="Enter Unit Price..." required />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Item Cost</label>
        <div class="col-md-6">
            <input type="text" readonly class="form-control" id="selectitemcost" step=".01" name="selectitemcost" placeholder="Item Cost..." required />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">

            <input type="submit" value="Add Item" class="btn btn-success" />
        </div>
    </div>
</div>
}


<div class="card">
    <div class="card card-flat">
        <div class="card-header">
            <h3 class="text-bold">Sale Item's List</h3>
            <h4 class="text-success">
                @{if (ViewBag.Message != null)
                    {
                        @ViewBag.Message;
                    }
                    else
                    { @Session["ErrorMessageSale"];
                } }
            </h4>
            <input type="text" id="search" name="search" class="form-control col-md-3" style="float:right;" placeholder="search here" />
        </div>
        <div class="card-body">
            <!-- START table-responsive-->
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="dataTable">
                    <thead style="background-color:lightgray;">
                        <tr>
                            <th>
                                Item's
                            </th>
                            <th>
                                Quantity
                            </th>
                            <th>
                                Unit Price
                            </th>
                            <th>
                                Item Cost
                            </th>
                            <th>
                                User
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="allitem">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblStock.ProductName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SaleQuantity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SaleUnitPrice)
                                </td>
                                <td>
                                    @* @((item.SaleQuantity * item.SaleUnitPrice).ToString("N2")) //.ToString("F2") *@
                                    @(string.Format("{0:0.000}", Math.Truncate(item.SaleQuantity * item.SaleUnitPrice * 10) / 10))
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblUser.UserName)
                                </td>
                                <td>
                                    @Html.ActionLink("Delete", "DeleteConfirm", new { id = item.SaleCartDetailID }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }

                    </tbody>
                    <tfoot>
                        <tr>
                            <td></td>
                            <td></td>

                            <td style="background-color:black; color:white;">Total Sale Amount</td>
                            <td style="background-color:black; color:white;">
                                @(string.Format("{0:0.000}", Math.Truncate(ViewBag.TotalAmount * 10) / 10)) PKR
                            </td>
                            <td></td>

                        </tr>
                    </tfoot>
                </table>
                <div style="margin-top:20px; float:right">
                    @Html.ActionLink("Next", "SelectCustomer", null, new { @class = "btn btn-success", style = "padding:20px;" })
                    @Html.ActionLink("Cancel", "CancelSale", null, new { @class = "btn btn-danger", style = "padding:20px;" })
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#search").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#allitem tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });

        $("#PID").change(function () {
            $("#Price").val("0");
            $.ajax({
            url: '@Url.Action("GetProductDetails", "SaleCart")',
            type: 'GET',
                data: { id: $(this).val() },
            success: function (response) {
              $('#Price').val(response.data);
            },
                error: function () {
                    $('#Price').val("0");
            }
        });
        });

        $.ajax({
            url: '@Url.Action("GetProduct", "SaleCart")',
            type: 'GET',
            data: "{}",
            success: function (response) {
                for(var i = 0; i < response.data.length; i++)
                {
                    $('#PID').append("<option value=" + response.data[i].ProductID + ">" + response.data[i].Name + "</option>");
                }
            },
            error: function () {
            }
        });

        $("#Qty").keyup(function () {
            var unitprice = $("#Price").val();
            var qty = this.value;
            $('#selectitemcost').val((unitprice * qty));
        });

        $("#Price").keyup(function () {
            var qty = $("#Qty").val();
            var unitprice = this.value;
            $('#selectitemcost').val((unitprice * qty));
        });
    });
</script>

