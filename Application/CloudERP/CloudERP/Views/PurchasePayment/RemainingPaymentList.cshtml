@model IEnumerable<DatabaseAccess.Models.PurchasePaymentModel>

@{
    ViewBag.Title = "Purchase's Payment Pending";
}


<script src="~/Scripts/jquery-3.3.1.js"></script>
<div class="card">
    <div class="card card-flat">
        <div class="card-header">
            <h5 style="float:left;">@Session["Message"]</h5>
            <input type="text" id="search" name="search" class="form-control col-md-3" style="float:right;" placeholder="search here" />
        </div>
        <div class="card-body">
            <!-- START table-responsive-->
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTable">
                    <thead>
                        <tr>

                            <th>
                                Supplier
                            </th>
                             
                            <th>
                                Invoice No
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Total Amount
                            </th>
                            <th>
                                Return Products(Total Amount)
                            </th>
                            <th>
                                Amount After Return
                            </th>
                            <th>
                                Paid Amount
                            </th>
                            <th>
                                Payment Amount
                            </th>
                            <th>
                                Remaining Balance
                            </th>

                        </tr>
                    </thead>
                    <tbody id="allyears">
                        @foreach (var item in Model)
                        {
                        <tr>

                            <td>
                                @Html.ActionLink(item.SupplierName, "SupplierDetails","tblSuppliers",new { id = item.SupplierID},null)
                            </td>
                             
                            <td>
                                @Html.DisplayFor(modelItem => item.InvoiceNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InvoiceDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReturnProductAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AfterReturnTotalAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PaymentAmount)

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReturnPaymentAmount)
                            </td>
                            <td>
                                @*<label> @(item.TotalAmount - item.PaymentAmount)</label>*@
                                @Html.DisplayFor(modelItem => item.RemainingBalance)
                            </td>

                            <td>

                                @{
                                    if (item.TotalAmount - 1 > item.PaymentAmount)
                                    {
                                        @Html.ActionLink("Pay Amount", "PaidAmount", new { id = item.SupplierInvoiceID }, new { @class = "btn btn-primary" })
                                    }

                                    if (item.PaymentAmount > 0)
                                    {
                                        @Html.ActionLink("Pay History", "PaidHistory", new { id = item.SupplierInvoiceID }, new { @class = "btn btn-info" })
                                    }
                                }

                            </td>


                        </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#search").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#allyears tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>